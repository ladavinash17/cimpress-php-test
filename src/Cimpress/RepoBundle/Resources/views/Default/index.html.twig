{% extends '::base.html.twig' %}

{% block content %}

    <div class="content-wrapper">
        <h1>Browse Repositories</h1>

        {#<div class="filters"></div>#}

        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Sr.No.</th>
                            <th>Name</th>
                            <th>Owner</th>
                            <th>Language</th>
                            <th>Description</th>
                            <th>Size</th>
                            <th>Score</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for repository in data.repositories %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ repository.name }}</td>
                            <td>{{ repository.owner }}</td>
                            <td>{{ repository.description }}</td>
                            <td>{{ repository.language }}</td>
                            <td>{{ repository.size }}</td>
                            <td>{{ repository.score }}</td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="pagination-wrapper text-right">
                    <ul class="pagination">
                        <li>
                            <a href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
